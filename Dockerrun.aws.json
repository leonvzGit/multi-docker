{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "leonvzd/multi-client",
            "hostname": "client",
            "essential": false
            
        },
        {
            "name": "server",
            "image": "leonvzd/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "leonvzd/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostsPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        },
        {
            "name": "worker",
            "image": "leonvzd/multi-worker",
            "hostname": "worker",
            "essential": false
        }

    ]
}